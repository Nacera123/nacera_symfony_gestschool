{% extends 'base.html.twig' %}

{% block title %}TypeUtilisateur index
{% endblock %}

{% block body %}
	{{include("sidebar.html.twig")}}
	<style>
		body {
			background-color: #eee;
		}
	</style>

	<div class="home_content" style="margin-top:200px; height: 100%;">
		<h1>TypeUtilisateur index</h1>

		<table class="table table-bordered table-white" style="background-color:#fff;width:1000px; border:solid 1px; margin-right:auto; margin-left:auto;">
			<thead>
				<div style="width:1000px;height:80px;margin-right:auto; margin-left:auto">
					<center>

						<a href="{{ path('type_utilisateur_new') }}">
							<button class="btn btn-outline-secondary" style="color:black; width:1000px;height:80px; margin-right:auto; margin-left:auto;">
								<h1>Create new</h1>
							</button>
						</a>

					</center>
				</div>


				<tr>
					{# <th>Id</th> #}
					<th>Role</th>
					<th style="width:320px;">Description</th>
					<th style="width:250px;">actions</th>
				</tr>
			</thead>
			<tbody>
				{% for type_utilisateur in type_utilisateurs %}
					<tr>
						{# <td>{{ type_utilisateur.id }}</td> #}
						<td>{{ type_utilisateur.role }}</td>
						<td>{{ type_utilisateur.description }}</td>
						<td>
							<a href="{{ path('type_utilisateur_show', {'id': type_utilisateur.id}) }}">
								<button type="button" class="btn btn-outline-info" style="width:90px;">show</button>
							</a>
							<a href="{{ path('type_utilisateur_edit', {'id': type_utilisateur.id}) }}">
								<button type="button" class="btn btn-outline-warning" style="width:90px;">edit</button>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{# <a href="{{ path('type_utilisateur_new') }}">Create new</a> #}
	</div>
{% endblock %}
