{% extends 'base.html.twig' %}

{% block title %}Compte index
{% endblock %}

{% block body %}
	{{include("sidebar.html.twig")}}
	<style>
		body {
			background-color: #eee;
		}
	</style>

	<div class="home_content" style="margin-top:200px; height: 100%;">
		<h1>Compte index</h1>

		<table class="table table-bordered table-white" style="background-color:#fff;width:1400px; border:solid 1px; margin-right:auto; margin-left:auto;">
			<thead>
				<div style="width:1400px;height:80px;margin-right:auto; margin-left:auto">
					<center>

						<a href="{{ path('compte_new') }}">
							<button class="btn btn-outline-secondary" style="color:black; width:1400px;height:80px; margin-right:auto; margin-left:auto;">
								<h1>Create new</h1>
							</button>
						</a>

					</center>
				</div>

				<tr>
					{# <th>Id</th> #}
					<th>Identifiant</th>
					<th>Roles</th>
					<th>Password</th>
					<th style="width:250px;">actions</th>
				</tr>
			</thead>
			<tbody>
				{% for compte in comptes %}
					<tr>
						{# <td>{{ compte.id }}</td> #}
						<td>{{ compte.identifiant }}</td>
						<td>{{ compte.roles ? compte.roles|json_encode : '' }}</td>
						<td>{{ compte.password }}</td>
						<td>
							<a href="{{ path('compte_show', {'id': compte.id}) }}">
								<button type="button" class="btn btn-outline-info" style="width:90px;">show</button>
							</a>
							<a href="{{ path('compte_edit', {'id': compte.id}) }}">
								<button type="button" class="btn btn-outline-warning" style="width:90px;">edit</button>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{# <a href="{{ path('compte_new') }}">Create new</a> #}
	</div>
{% endblock %}
