{% extends 'base.html.twig' %}

{% block title %}Classe index{% endblock %}

{% block body %}
    {{include("sidebar.html.twig")}}
    <div class="home_content" id ="classes">
        <h1>Classe index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Salle</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for classe in classes %}
                <tr>
                    <td>{{ classe.id }}</td>
                    <td>{{ classe.salle }}</td>
                    <td>
                        <a href="{{ path('classe_show', {'id': classe.id}) }}">show</a>
                        <a href="{{ path('classe_edit', {'id': classe.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('classe_new') }}">Create new</a>
    </div>
{% endblock %}
