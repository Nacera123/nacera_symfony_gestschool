{% extends 'base.html.twig' %}

{% block title %}Eleve index{% endblock %}

{% block body %}
    {{include("sidebar.html.twig")}}
    <div class="home_content" id ="classes">
        <h1>Eleve index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Date_de_naissance</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for eleve in eleves %}
                <tr>
                    <td>{{ eleve.id }}</td>
                    <td>{{ eleve.nom }}</td>
                    <td>{{ eleve.prenom }}</td>
                    <td>{{ eleve.dateDeNaissance ? eleve.dateDeNaissance|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('eleve_show', {'id': eleve.id}) }}">show</a>
                        <a href="{{ path('eleve_edit', {'id': eleve.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('eleve_new') }}">Create new</a>
    </div>
{% endblock %}
