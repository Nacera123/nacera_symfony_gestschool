	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8">
			<meta http-equiv="X-UA-Compatible" content="IE=edge">
			<meta name="viewport" content="width=device-width, initial-scale=1.0">
			<title>Document</title>
			<!--boxicons CDN -->
			<link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

		</head>
		<body>
			{# style="overflow-y:scroll;" #}
			<div class="sidebar" style="overflow-y:scroll;">

				<div class="logo_content">

					<div class="logo">
						<i class='bx bxl-c-plus-plus'></i>
						<div class="logo_name">CodingLab</div>
					</div>
					<i class='bx bx-menu' id="btn"></i>

					<!-- <a href="#"> -->
				<!-- <i class='bx bx-menu'  id ="btn"></i> -->
					<!-- </a> -->
				</div>
				<div class="sidenav_list">

					<li>

						<i class='bx bx-search-alt' id="isearch"></i>
						<input type="text" placeholder="Search...">
						<span class="tooltip">Search</span>
					</li>
					<li>
						<a href="#">
							<i class='bx bx-grid-alt'></i>
							<span class="links_name">Dashboard</span>
						</a>
						<span class="tooltip">Dashboard</span>
					</li>
					{% if is_granted('ROLE_Gestionnaire_Ecole') %}
						<li>
							<a href="{{path('cycle_index')}}">
								<i class='bx bx-user'></i>
								<span class="links_name">Cycle</span>
							</a>
							<span class="tooltip">Cycle</span>
						</li>
					{% endif %}

					<li>
						<a href="{{path('app_register')}}">
							<i class='bx bx-chat'></i>
							<span class="links_name">Inscription</span>
						</a>
						<span class="tooltip">Inscription</span>
					</li>
					<li>
						<a href="{{path('classe_index')}}">
							<i class='bx bx-chat'></i>
							<span class="links_name">Classe</span>
						</a>
						<span class="tooltip">Classe</span>
					</li>
					<li>
						<a href="{{path('utilisateur_index')}}">
							<i class='bx bx-pie-chart-alt-2'></i>
							<span class="links_name">Utilisateur</span>
						</a>
						<span class="tooltip">Utilisateur</span>
					</li>
					<li>
						<a href="{{path('eleve_index')}}">
							<i class='bx bx-folder-open'></i>
							<span class="links_name">Eleve</span>
						</a>
						<span class="tooltip">Eleve</span>
					</li>
					<li>
						<a href="{{path('type_utilisateur_index')}}">
