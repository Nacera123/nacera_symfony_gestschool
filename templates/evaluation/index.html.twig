{% extends 'base.html.twig' %}

{% block title %}Evaluation index
{% endblock %}

{% block body %}
	{{include("sidebar.html.twig")}}
	<style>
		body {
			background-color: #eee;
		}
	</style>

	<div class="home_content" style="margin-top:200px; height: 100%;">

		<h1>Evaluation index</h1>

		<table class="table table-bordered table-white" style="background-color:#fff;width:1200px; border:solid 1px; margin-right:auto; margin-left:auto;">
			<thead>


				<div style="width:1200px;height:80px;margin-right:auto; margin-left:auto">
					<center>

						<a href="{{ path('evaluation_new') }}">
							<button class="btn btn-outline-secondary" style="color:black; width:1200px;height:80px; margin-right:auto; margin-left:auto;">
								<h1>Create new</h1>
							</button>
						</a>

					</center>
				</div>

				<tr>
					{# <th>Id</th> #}
					<th>Devoirs</th>
					<th>Examen</th>
					<th>Moyenne</th>
					<th>Appr√©ciation</th>

					<th style="width:250px;">actions</th>
				</tr>
			</thead>
			<tbody>
				{% for evaluation in evaluations %}
					<tr>
						{# <td>{{ evaluation.id }}</td> #}
						<td>{{ evaluation.devoirs }}</td>
						<td>{{ evaluation.examen }}</td>
						<td>{{ evaluation.moyenne }}</td>
						<td>{{ evaluation.appreciation }}</td>

						<td>
							<a href="{{ path('evaluation_show', {'id': evaluation.id}) }}">
								<button type="button" class="btn btn-outline-info" style="width:90px;">show</button>
							</a>
							<a href="{{ path('evaluation_edit', {'id': evaluation.id}) }}">
								<button type="button" class="btn btn-outline-warning" style="width:90px;">edit</button>
							</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		{# <a href="{{ path('evaluation_new') }}">Create new</a> #}
	</div>
{% endblock %}
